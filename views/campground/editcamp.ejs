<% layout('../layout/Boilerplate') %>
<div class="row mb-3">
  <h1 class="text-center">Edit Campground</h1>
</div>
<div class="col-6 offset-3">
  <form
    method="post"
    action="/campground/<%=idCamps._id%>?_method=PUT"
    class="needs-validation"
    enctype="multipart/form-data"
    noValidate
  >
    <div class="mb-3">
      <label class="form-label" for="title">Campground Title</label>
      <input class="form-control" id="title" type="text" name="title" value="<%=idCamps.title%>" required />
      <div class="invalid-feedback">Please Fill Title Information</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="location">Campground Location</label>
      <input class="form-control" id="location" type="text" name="location" value="<%=idCamps.location%>" required />
      <div class="invalid-feedback">Please Provide Location</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="price">Campground Price</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input
          id="price"
          type="text"
          name="price"
          class="form-control"
          value="<%=idCamps.price%>"
          aria-label="Amount (to the nearest dollar)"
          placeholder="0.00"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="image">Image</label>
      <input type="file" name="image" class="form-control" id="image" multiple />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="mb-3 d-block">
      <% idCamps.image.forEach(function(img, id){ %>
      <img class="img-thumbnail" src="<%=img.thumbnail%>" alt="Slide" />
      <input class="form-check" type="checkbox" name="deleteImages[]" id="image-<%=id%>" value="<%= img.filename %>" />
      <label class="form-check-label d-block" for="image-<%=id%>">Delete</label>
      <% }) %>
    </div>
    <button class="btn btn-success">Save Changes</button>
    <a href="./" class="btn btn-outline-secondary d-inline">Cancel</a>
  </form>
</div>
